<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Top Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="407dp"
        android:layout_height="119dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back chevron button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_orange_circle"
            android:backgroundTint="@color/orange_accent"
            android:contentDescription="@string/content_desc_back_button"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_details"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:contentDescription="@string/content_desc_share"
            android:padding="12dp"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/iv_event_banner"
                android:layout_width="411dp"
                android:layout_height="259dp"
                android:layout_marginTop="4dp"
                android:background="#F5F5F5"
                android:contentDescription="@string/content_desc_event_banner"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_category_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_category_chip"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="@string/category_tag"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_event_banner" />

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/event_title"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_category_tag" />

            <!-- Date & Time Row -->
            <ImageView
                android:id="@+id/iv_date_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/content_desc_date_icon"
                android:src="@drawable/ic_calendar"
                app:layout_constraintStart_toStartOf="@+id/tv_event_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_title" />

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/date_time"
                android:textColor="#424242"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_date_icon"
                app:layout_constraintStart_toEndOf="@+id/iv_date_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_date_icon" />

            <!-- Venue Row -->
            <ImageView
                android:id="@+id/iv_venue_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/content_desc_venue_icon"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="@+id/iv_date_icon"
                app:layout_constraintTop_toBottomOf="@+id/iv_date_icon" />

            <TextView
                android:id="@+id/tv_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/venue"
                android:textColor="#424242"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_venue_icon"
                app:layout_constraintStart_toEndOf="@+id/iv_venue_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_venue_icon" />

            <!-- Organizer Row -->
            <ImageView
                android:id="@+id/iv_organizer_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/content_desc_organizer_icon"
                android:src="@drawable/ic_user"
                app:layout_constraintStart_toStartOf="@+id/iv_venue_icon"
                app:layout_constraintTop_toBottomOf="@+id/iv_venue_icon" />

            <TextView
                android:id="@+id/tv_organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/organizer"
                android:textColor="#424242"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_organizer_icon"
                app:layout_constraintStart_toEndOf="@+id/iv_organizer_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_organizer_icon" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_calendar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/add_to_calendar"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_calendar"
                app:iconTint="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tv_organizer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_organizer_icon"
                app:strokeColor="#757575" />

            <!-- Overview Section -->
            <TextView
                android:id="@+id/label_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/overview"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/iv_organizer_icon"
                app:layout_constraintTop_toBottomOf="@+id/iv_organizer_icon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/label_overview"
                app:strokeColor="#757575"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/tv_overview_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    tools:text="Overview text here" />
            </androidx.cardview.widget.CardView>

            <!-- Highlights Section -->
            <TextView
                android:id="@+id/label_highlights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/highlights"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/label_overview"
                app:layout_constraintTop_toBottomOf="@+id/card_overview" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_highlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/label_highlights"
                app:strokeColor="#757575"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/tv_highlights_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    tools:text="Highlights here" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Registration Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btn_bookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_filter_button"
            android:contentDescription="@string/content_desc_bookmark"
            android:padding="12dp"
            android:src="@drawable/bookmark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/orange_accent"
            android:paddingVertical="12dp"
            android:text="@string/register_now"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_bookmark"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
